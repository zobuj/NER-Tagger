{
    "manifest_version": 2,
    "name": "Paragraph Scraper",
    "version": "1.0",
    "description": "Scrapes paragraphs from a website and sends them to a Django backend",
    "permissions": [
      "activeTab",
      "http://*/",
      "https://*/"
    ],
    "browser_action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  